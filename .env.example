# 數據庫配置
DATABASE_URL=postgresql://username:password@localhost:5432/leadio_api

# Clerk 配置 (從 Vue 前端項目複製)
CLERK_PUBLISHABLE_KEY=pk_test_...
CLERK_SECRET_KEY=sk_test_...

# 存儲配置 - 選擇存儲方式
STORAGE_TYPE=local
# 選項: local (本地存儲) 或 cloudinary (雲端存儲)

# Cloudinary 配置 (僅在 STORAGE_TYPE=cloudinary 時需要)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Resend Email 配置
RESEND_API_KEY=re_...

# 服務器配置
PORT=3001
NODE_ENV=development
CORS_ORIGIN=http://localhost:5173

# 報告配置
REPORT_RETENTION_DAYS=30
MAX_REPORT_SIZE_MB=10

# API 安全
API_SECRET_KEY=your_super_secret_key_here
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100